<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>
<body>
<% include ./partials/header.ejs %>



    <section class = "SecGlobal">
        <p class="sub-titel">All rooms</p>
        <!-- Table -->
        <table>
            <thead>
                <tr>
                    <th>Room type</th>
                    <th>Room number</th>
                    <th><a href="/room/create" class ="btn-add" style="float: right;">Add</a></th>
                </tr>
            </thead>
                <tbody>
                <% for (var i=0; i<rooms.length; i++){ %>
                    <tr>
                        <td><%= rooms[i].room_type %></td>
                        <td><%= rooms[i].room_number %></td>

                        <td style="text-align: right;">
                            <!-- Split button -->

                                <a href="/room/<%= rooms[i].room_id %>/update" class="btn-edit" style="color:white">Edit</a>
                                    <form action="/room/<%= rooms[i].room_id %>/delete" method="post" class="form-del">
                                        <button class="btn-del" style="color:white" onclick="return confirm('are you sure to delete this Room?');">Delete</button>
                                    </form>

                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </section>


<% include ./partials/footer %>
</body>
</html>