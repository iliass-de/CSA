<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head %>
</head>

<body>
<% include ./partials/header %>



    <section  class = "SecGlobal">
        <p>Users Table</p>
        <!-- Table -->
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Firstname</th>
                <th>Administrator</th>
                <th><a href="/employee/create" class ="btn-add" style="float: right;">Add</a></th>
            </tr>

            </thead>

            <tbody>

            <% for (var i=0; i<employees.length; i++){ %>
            <tr>
                <td><%= employees[i].last_name %></td>
                <td><%= employees[i].first_name %></td>
                <td><% if(employees[i].isAdmin === 1){ %>
                        <div class="col-3" align="center">
                            <img src="/images/true.jpg" height="30px" width="30px">
                        </div>
                    <%} else {%>
                        <div class="col-3" align="center">
                            <img src="/images/false.jpg" height="30px" width="30px">
                        </div>
                    <%}%>
                </td>

                <td style="text-align: right;">
                    <!-- Split button -->

                        <a href="/employee/<%= employees[i].id %>/update" class="btn-edit" style="color:white">Edit</a>
                        <% if (employees[i].isAdmin != 1) { %>
                            <form action="/employee/<%= employees[i].id %>/delete" method="post" class="form-del">
                                <button class="btn-del" style="color:white">Delete</button>
                            </form>
                        <%}%>

                </td>
            </tr>
            <% } %>
            </tbody>
        </table>

    </section>



<% include ./partials/footer %>
</body>

</html>